{
  "name": "reagordi/reagordi",
  "description": "Reagordi PHP Framework Version 1 - Development Package",
  "keywords": [
    "reagordi",
    "framework"
  ],
  "version": "1.0.0",
  "homepage": "https://reagordi.com/",
  "type": "reagordi-extension",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Sergej Rufov",
      "email": "support@ugroup.site",
      "homepage": "https://reagordi.com/",
      "role": "Founder and project lead"
    }
  ],
  "support": {
    "issues": "https://bugs.ugroup.site/reagordi?state=open",
    "forum": "https://forum.ugroup.site/reagordi",
    "wiki": "https://dev.ugroup.site/reagordi",
    "source": "https://github.com/reagordi/reagordi"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "replace": {
    "reagordi/reagordi": "self.version"
  },
  "require": {
    "php": ">=8.0",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-ctype": "*",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-zip": "*",
    "phenx/php-font-lib": "^0.5.4",
    "phenx/php-svg-lib": "^0.3.3 || ^0.4.0",
    "phpfastcache/phpfastcache": "^9.1",
    "filp/whoops": "^2.14",
    "twig/twig": "^3.0",
    "ext-curl": "*",
    "kilylabs/odata-1c": "^1.2",
    "gabordemooij/redbean": "^5.7",
    "phpoffice/phpword": "^0.18.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5 || ^8 || ^9",
    "squizlabs/php_codesniffer": "^3.5",
    "mockery/mockery": "^1.3",
    "goetas/xsd2php": "^2.1"
  },
  "suggest": {
    "ext-gd": "Needed to process images",
    "ext-imagick": "Improves image processing performance",
    "ext-gmagick": "Improves image processing performance",
    "ext-zlib": "Needed for pdf stream compression"
  },
  "autoload": {
    "psr-4": {
        "Dompdf\\": "lib/dompdf/src/"
    },
    "classmap": [
        "lib/dompdf/lib/"
    ]
  },
  "autoload-dev": {
      "psr-4": {
          "Dompdf\\Tests\\": "lib/dompdf/tests/"
      }
  }
}
